{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,                   
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "../src",
    "checkJs": true,
    "strict": true,
    "paths": {
      "@constants/*": [
        "../src/constants/*"
      ],
      "@resources/*": [
        "../src/resources/*"
      ],
      "@classes/*": [
        "../src/classes/*"
      ]
    },
    
  },
  "include": ["../src"],
  "exclude": ["../node_modules", "../vite.config.ts", "../src/**/*.test.ts"]
}