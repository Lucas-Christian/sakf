{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,                   
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "../src",
    "checkJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": [
        "../src/constants/*"
      ],
      "@resources/*": [
        "../src/resources/*"
      ],
      "@classes/*": [
        "../src/classes/*"
      ],
      "@imageManipulation/*": [
        "../src/resources/imageManipulation/*"
      ],
      "@native/*": [
        "../src/resources/native/*"
      ],
      "@typeChecking/*": [
        "../src/resources/typeChecking/*"
      ]
    },
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../node_modules", "../vite.config.ts"]
}